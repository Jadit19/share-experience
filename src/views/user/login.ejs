<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Login</title>
        <link rel="stylesheet" href="/css/navbar.css">
        <link rel="stylesheet" href="/css/main.css">
        <link rel="stylesheet" href="/css/user/style.css">
    </head>
    <body>
        <div class="wrapper">
            <%- include('../partials/navbar') %>
            <div class="container">
                <h1>Login</h1>
                <form action="#" id="loginForm" class="content">
                    <div class="form-group">
                        <input required placeholder="Enter Your User-Name" type="text" name="username" id="username" class="form-control">
                        <div class="back"></div>
                    </div>
                    <div class="form-group">
                        <input required placeholder="Enter Your Password" type="password" name="password" id="password" class="form-control">
                        <div class="back"></div>
                    </div>
                    <div class="btnContainer">
                        <a href="/" class="btn">Forgot Password?</a>
                        <input class="btn" type="submit">
                    </div>
                </form>
            </div>
        </div>
        <script src="/js/user/login.js"></script>
    </body>
</html>