<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title><%- article.title %></title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link rel="stylesheet" href="/css/navbarSuccess.css">
        <link rel="stylesheet" href="/css/main.css">
        <link rel="stylesheet" href="/css/user/style.css">
        <link rel="stylesheet" href="/css/user/profile.css">
        <link rel="stylesheet" href="/css/article/style.css">
    </head>
    <body onload="tokenPresence()">
        <div class="wrapper">
            <%- include('../partials/navbarSuccess') %>
            <div class="container">
                <h1><%- article.title %></h1>
                <div class="articleContent">
                    <div class="card">
                        <%- article.sanitizedHTML %>
                    </div>
                </div>
            </div>
            <div class="container" style="margin-top: 20px">
                <h1>Comments</h1>
                <div class="content">
                    <% comments.forEach(comment => { %>
                        <div class="commentCard">
                            <div class="commentUsername"><%- comment.username %></div>
                            <div><%- comment.description %></div>
                        </div>
                    <% }) %> 
                </div>
            </div>
            <div class="container" style="margin-top: 20px">
                <h1>New Comment</h1>
                <form class="content" action="/articles/<%- dept.slug %>/<%- subject.slug %>/<%- article.slug %>/newComment" method="POST">
                    <h2 id="usernameDisplay"></h2>
                    <div class="form-group">
                        <input required placeholder="Enter the Description" type="text" name="commentDesc" id="commentDesc" class="form-control">
                        <div class="back"></div>
                    </div>
                    <input type="text" id="articleUserName" name="articleUserName" style="display: none;">
                    <input class="btn" type="submit" style="margin-top: 10px;">
                </form>
            </div>
        </div>
        <script src="/js/article/newArticle.js"></script>
        <script src="/js/navbarSuccess.js"></script>
    </body>
</html>